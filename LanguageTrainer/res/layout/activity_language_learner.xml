<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contentDescription="@string/abc_searchview_description_clear"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.kakkr1.languagetrainer.LanguageLearner" >

    <ImageView
        android:id="@+id/ivDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:src="@android:drawable/alert_light_frame" />

    <RadioGroup
        android:id="@+id/rdGroupNoun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <RadioButton
            android:id="@+id/rdBtnDas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
           
            android:text="@string/das" />

        <RadioButton
            android:id="@+id/rdBtnDer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/der" />

        <RadioButton
            android:id="@+id/rdBtnDie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/die" />
    </RadioGroup>

    <Button
        android:id="@+id/btnRandom"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivDisplay"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:text="Next" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnRandom"
        android:layout_marginBottom="32dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="17dp"
        android:text="TextView" />

</RelativeLayout>
