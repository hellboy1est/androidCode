<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="bit.kakkr1.spinnerinstrument.SpinnerActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <RadioGroup
        android:id="@+id/rdGroup_Instruments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp" >

        <RadioButton
            android:id="@+id/rdAccordian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Accordian" />

        <RadioButton
            android:id="@+id/rdBass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bass" />

        <RadioButton
            android:id="@+id/rdCello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cello" />
    </RadioGroup>

    <TextView
        android:id="@+id/txtInstrumentMonths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rdGroup_Instruments"
        android:layout_centerVertical="true"
        android:text="When do you want to start?" />

    <Spinner
        android:id="@+id/spnMonths"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/btnEnrol"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtInstrumentMonths"
        android:layout_below="@+id/spnMonths"
        android:layout_marginTop="25dp"
        android:text="Enrol" />

</RelativeLayout>